<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CavaionActivity">

    <TextView
        android:id="@+id/lblCavaion"
        android:layout_width="152dp"
        android:layout_height="0dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="685dp"
        android:text="Cavaion Town benvenuti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackToVerona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="499dp"
        android:text="back to verona"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCavaion" />

    <Switch
        android:id="@+id/switchCavaion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="253dp"
        android:layout_marginTop="354dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="304dp"
        android:text="Switch Cavaion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCavaion" />
</androidx.constraintlayout.widget.ConstraintLayout>